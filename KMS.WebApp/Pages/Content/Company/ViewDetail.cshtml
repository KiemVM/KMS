@page "/Company/ViewDetail"
@model ViewDetailModel
@using KMS.Core.Entities.Content
@using CompanyViewModel = KMS.Core.ViewModels.Content.CompanyViewModel
@{
    ViewBag.Title = Model.Title;
    ViewBag.ActiveMenu = ConstPathUrl.Company;
}
<div class="toolbar d-flex flex-stack flex-wrap ms-5 mb-5 mb-lg-5" id="kt_toolbar">
    <div class="page-title d-flex flex-column py-1">
        <h1 class="d-flex align-items-center my-1">
            <span class="text-dark fw-bolder fs-1">@ViewBag.Title</span>
        </h1>
    </div>
</div>
<div class="row mb-3">
    <div style="text-align:right">
        <div>
            <button type="reset" class="btn btn-light me-3 w-120px" data-bs-dismiss="modal" onclick="back()">Quay lại</button>
        </div>
    </div>
</div>

<!-- Tabs navigation -->
<ul class="nav nav-tabs mb-3" id="companyTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-controls="info" aria-selected="true">
            Thông tin công ty
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="app-tab" data-bs-toggle="tab" data-bs-target="#app" type="button" role="tab" aria-controls="app" aria-selected="false">
            Ứng dụng
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="db-tab" data-bs-toggle="tab" data-bs-target="#db" type="button" role="tab" aria-controls="db" aria-selected="false">
            Database Schema
        </button>
    </li>
</ul>

<!-- Tabs content -->
<div class="tab-content" id="companyTabContent">
    <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">
        <div class="row">
            <div class="col-md-3 text-center">
                @if (!string.IsNullOrEmpty(Model.CompanyViewModel.Image))
                {
                    <img src="@Model.CompanyViewModel.Image" alt="Logo" class="img-fluid rounded mb-3" style="max-height:120px;" />
                }
                else
                {
                    <div class="bg-light border rounded mb-3" style="height:120px; display:flex; align-items:center; justify-content:center;">
                        <span class="text-muted">No Logo</span>
                    </div>
                }
            </div>
            <div class="col-md-9">
                <h4 class="fw-bold mb-2">@Model.CompanyViewModel.Name</h4>
                <div class="mb-1"><strong>Địa chỉ:</strong> @Model.CompanyViewModel.Address</div>
                <div class="mb-1"><strong>SDT:</strong> @Model.CompanyViewModel.Phone</div>
                <div class="mb-1"><strong>Email:</strong> @Model.CompanyViewModel.Email</div>
                <div class="mb-1"><strong>Mô tả:</strong>@Html.Raw(Model.CompanyViewModel?.Description)</div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="app" role="tabpanel" aria-labelledby="app-tab">
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-primary" onclick="addApplication()">
                <i class="bi bi-plus-lg"></i> Thêm mới
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-row-dashed table-row-bordered table-row-gray-300 align-middle gs-0" style="min-width:1000px">
                <thead>
                    <tr class="fw-bolder bg-primary text-white">
                        <th>Tên ứng dụng</th>
                        <th class="w-120px text-center">Trạng thái</th>
                        <th class="w-80px text-center">Sửa</th>
                        <th class="w-80px text-center">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CompanyViewModel.Applications == null || !Model.CompanyViewModel.Applications.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Không có ứng dụng nào</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var app in Model.CompanyViewModel.Applications)
                        {
                            <tr class="@app.Status.CssClass()">
                                <td>@app.Name</td>
                                <td class="text-center">@Html.Raw(app.Status.Badge())</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-warning" onclick="editApplication('@app.Id')">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger" onclick="deleteApplication('@app.Id')">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="tab-pane fade" id="db" role="tabpanel" aria-labelledby="db-tab">
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-primary" onclick="addSchema()">
                <i class="bi bi-plus-lg"></i> Thêm mới
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-row-dashed table-row-bordered table-row-gray-300 align-middle gs-0" style="min-width:1000px">
                <thead>
                    <tr class="fw-bolder bg-primary text-white">
                        <th>Tên schema</th>
                        <th class="w-120px text-center">Database</th>
                        <th class="w-120px text-center">Trạng thái</th>
                        <th class="w-80px text-center">Sửa</th>
                        <th class="w-80px text-center">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CompanyViewModel.Schemas == null || !Model.CompanyViewModel.Schemas.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không có schema nào</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var schema in Model.CompanyViewModel.Schemas)
                        {
                            <tr class="@schema.Status.CssClass()">
                                <td>@schema.Name</td>
                                <td class="text-center">@schema.Database</td>
                                <td class="text-center">@Html.Raw(schema.Status.Badge())</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-warning" onclick="editSchema('@schema.Id')">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </button>
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger" onclick="deleteSchema('@schema.Id')">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<!-- Modal for Edit -->
<div class="modal fade" id="ApplicationEditModal" tabindex="-1" aria-labelledby="ApplicationEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="ApplicationEditModalContent">
            <!-- Content loaded via AJAX -->
        </div>
    </div>
</div>

<script type="text/javascript">
    function back() {
        window.location.href="@ConstPathUrl.Company";
    }

    function editApplication(id) {
        var url = "/Application/AddOrUpdate?Id=" + id;
        window.location = url;
    }

    function addApplication() {
            var url = "/Application/AddOrUpdate?CompanyId=@Model.CompanyViewModel.Id";
            window.location = url;
    }

    function deleteApplication(id) {
        SwalConfirm("Bạn có chắc muốn xóa thông tin này không?",
                function () {
                    AjaxAsync("/Api/Application/RemoveAsync/" + id, window.objAjax,
                        function () {
                            window.location.reload();
                        });
                }, "", "500", "question", "Xác nhận");
    }

    function addSchema() {
            var url = "/Schema/AddOrUpdate?CompanyId=@Model.CompanyViewModel.Id";
            window.location = url;
        }

        function editSchema(id) {
            var url = "/Schema/AddOrUpdate?Id=" + id;
            window.location = url;
        }

        function deleteSchema(id) {
            SwalConfirm("Bạn có chắc muốn xóa schema này không?",
                function () {
                    AjaxAsync("/Api/Schema/RemoveAsync/" + id, window.objAjax,
                        function () {
                            window.location.reload();
                        });
                }, "", "500", "question", "Xác nhận");
        }
</script>